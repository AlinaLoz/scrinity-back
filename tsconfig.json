{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "paths": {
      "libs/constants": [
        "libs/constants/src"
      ],
      "libs/constants/*": [
        "libs/constants/src/*"
      ],
      "libs/logger": [
        "libs/logger/src"
      ],
      "libs/logger/*": [
        "libs/logger/src/*"
      ]
    }
  }
}

{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "environment": [
        {
          "name": "SERVICE",
          "value": "api"
        },
        {
          "name": "POSTGRES_HOST",
          "value": "${POSTGRES_HOST}"
        },
        {
          "name": "POSTGRES_USER",
          "value": "${POSTGRES_USER}"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${POSTGRES_PASSWORD}"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "${POSTGRES_PORT}"
        },
        {
          "name": "POSTGRES_DB",
          "value": "${POSTGRES_DB}"
        }
      ],
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z:latest",
      "name": "api",
      "memory": 100,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 27180
        }
      ],
      "links": ["postgres"]
    },
    {
      "environment": [
        {
          "name": "POSTGRES_HOST",
          "value": "${POSTGRES_HOST}"
        },
        {
          "name": "POSTGRES_USER",
          "value": "${POSTGRES_USER}"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${POSTGRES_PASSWORD}"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "${POSTGRES_PORT}"
        },
        {
          "name": "POSTGRES_DB",
          "value": "${POSTGRES_DB}"
        }
      ],
      "essential": true,
      "memory": 100,
      "image": "mdillon/postgis:11",
      "mountPoints": [
        {
          "containerPath": "/var/lib/postgresql/data/",
          "sourceVolume": "Postgres_Data"
        }
      ],
      "name": "postgres",
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 27188
        }
      ]
    },
    {
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z-client",
      "name": "client",
      "memory": 100,
      "portMappings": [
        {
          "containerPort": 27182,
          "hostPort": 27182
        }
      ]
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "postgres_data_new_2"
      },
      "name": "Postgres_Data"
    }
  ]
}

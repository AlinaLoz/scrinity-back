{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "essential": true,
      "image": "nginx:latest",
      "mountPoints": [
        {
          "containerPath": "/etc/nginx/nginx.conf",
          "sourceVolume": "_Nginx_Conf"
        }
      ],
      "name": "nginx",
      "portMappings": [
        {
          "containerPort": 27188,
          "hostPort": 27188
        },
        {
          "containerPort": 27180,
          "hostPort": 27180
        }
      ]
    },
    {
      "environment": [
        {
          "name": "SERVICE",
          "value": "api"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${POSTGRES_PASSWORD}"
        }
      ],
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z:latest",
      "name": "api",
      "memory": 100,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 27180
        }
      ]
    },
    {
      "environment": [
        {
          "name": "POSTGRES_PASSWORD",
          "value": "${POSTGRES_PASSWORD}"
        }
      ],
      "essential": true,
      "memory": 100,
      "image": "mdillon/postgis:11",
      "mountPoints": [
        {
          "containerPath": "/var/lib/postgresql/data/",
          "sourceVolume": "Postgres_Data"
        }
      ],
      "name": "postgres",
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 27188
        }
      ]
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "./nginx.conf"
      },
      "name": "_Nginx_Conf"
    },
    {
      "host": {
        "sourcePath": "postgres_data"
      },
      "name": "Postgres_Data"
    }
  ]
}

{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "environment": [
        {
          "name": "SERVICE",
          "value": "api"
        },
        {
          "name": "POSTGRES_HOST",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_DB",
          "value": "project-z"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "5432"
        }
      ],
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z:latest",
      "name": "api",
      "memory": 100,
      "portMappings": [
        {
          "containerPort": 3001,
          "hostPort": 27180
        }
      ],
      "mountPoints": [
        {
          "containerPath": "/app/templates",
          "sourceVolume": "_Templates"
        }
      ],
      "links": ["postgres"]
    },
    {
      "environment": [
        {
          "name": "SERVICE",
          "value": "manager"
        },
        {
          "name": "POSTGRES_HOST",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_DB",
          "value": "project-z"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "5432"
        }
      ],
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z-manager:latest",
      "name": "manager",
      "memory": 100,
      "portMappings": [
        {
          "containerPort": 3002,
          "hostPort": 27181
        }
      ],
      "links": ["postgres"]
    },
    {
      "environment": [
        {
          "name": "POSTGRES_USER",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_DB",
          "value": "project-z"
        },
        {
          "name": "POSTGRES_PORT",
          "value": "5432"
        }
      ],
      "essential": true,
      "memory": 100,
      "image": "mdillon/postgis:11",
      "mountPoints": [
        {
          "containerPath": "/var/lib/postgresql/data/",
          "sourceVolume": "Postgres_Data"
        }
      ],
      "name": "postgres",
      "portMappings": [
        {
          "containerPort": 5432,
          "hostPort": 27188
        }
      ]
    },
    {
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z-client:latest",
      "name": "client",
      "memory": 200,
      "portMappings": [
        {
          "containerPort": 27182,
          "hostPort": 27182
        }
      ]
    },
    {
      "essential": true,
      "image": "343300559621.dkr.ecr.eu-west-1.amazonaws.com/project-z-admin:latest",
      "name": "admin",
      "memory": 600,
      "portMappings": [
        {
          "containerPort": 27183,
          "hostPort": 27183
        }
      ]
    }
  ],
  "family": "",
  "volumes": [
    {
      "host": {
        "sourcePath": "postgres_data"
      },
      "name": "Postgres_Data"
    },
    {
      "host": {
        "sourcePath": "templates"
      },
      "name": "_Templates"
    }
  ]
}
